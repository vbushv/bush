<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="ServiceManager_sqlMap" >

<select id="getServiceList" parameterType="hashMap" resultType="vo.ServiceManagerVO">
	SELECT T.* FROM(
		SELECT A.*, ROWNUM AS rnum FROM(
			SELECT *
			FROM service_manager
			WHERE 1 = 1
				<if test="sm_name != null">
				 AND sm_name like '%' || #{sm_name} || '%'
				</if>
				<if test="sm_company != null">
				 AND sm_company like '%' || #{sm_company} || '%'
				</if>
				<if test="sm_status != null">
				 AND sm_status like '%' || #{sm_status} || '%'
				</if>
			ORDER BY sm_reg_date desc
		) A
	) T
	WHERE rnum BETWEEN #{startNum} and #{endNum}
</select>

