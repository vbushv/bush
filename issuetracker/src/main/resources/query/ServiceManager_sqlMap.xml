<select id="getServiceTotalCount" parameterType="hashMap" resultType="java.lang.Integer">
	SELECT COUNT(*)
	FROM service_manager
	WHERE 1 = 1
		<if test="sm_name != null">
		 AND sm_name like '%' || #{sm_name} || '%'
		</if>
		<if test="sm_company != null">
		 AND sm_company like '%' || #{sm_company} || '%'
		</if>
		<if test="sm_status != null">
		 AND sm_status = #{sm_status}
		</if>
</select>

